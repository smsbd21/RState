@model IEnumerable<RState.Tb_Users>

@{
    ViewBag.Title = "Index";
}

<div class="row mb-2">
    <div class="col col-lg-12">
        <h3>Users Information</h3>
        <hr />
        @using (Html.BeginForm("Index", "Users", FormMethod.Get, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="input-group">
                <input type="text" class="form-control" name="sName" placeholder="Search User Name" />
                <select class="form-control" name="sEmail">
                    <option value="">Select Email</option>
                    @foreach (var oPack in Model)
                    {
                        <option value="@oPack.Email">@oPack.Email</option>
                    }
                </select>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search mr-2"></i>Search
                    </button>
                    <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Users")">
                        <i class="fas fa-redo mr-2"></i>Reset
                    </a>
                    <a href="@Url.Action("Create", "Users")" class="btn-data btn btn-outline-success">
                        <i class="fas fa-plus mr-2"></i>Create
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col col-lg-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col" width="240px">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th scope="col" width="100px">
                        @Html.DisplayNameFor(model => model.CellNo)
                    </th>
                    <th scope="col" width="160px">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th scope="col" width="120px">
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th scope="col" width="140px">
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th scope="col" width="360px">
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th scope="col" width="120px">
                        @Html.DisplayNameFor(model => model.Share)
                    </th>
                    <th scope="col" width="60px">
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th scope="col" width="30px">Sts</th>
                    <th scope="col" width="100px">Picture</th>
                    <th scope="col" width="200px">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="margin-left:auto;">
                        <td style="padding: .02rem .2rem;">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td style="padding: .02rem .2rem;">
                            @Html.DisplayFor(modelItem => item.CellNo)
                        </td>
                        <td style="padding: .02rem .1rem;">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td style="padding: .02rem .1rem;">
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td style="padding: .02rem .1rem;">
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td style="padding: .02rem .1rem;">
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td style="padding: .02rem .1rem;">
                            @Html.DisplayFor(modelItem => item.Share)
                        </td>
                        <td style="padding: .02rem .1rem;">
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td style="padding: .02rem .1rem;">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td style="padding: .02rem .1rem;">
                            <img src="~/images/site/@item.UserPic" alt="User Picture" style="width: 100%; height:96px;" />
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
