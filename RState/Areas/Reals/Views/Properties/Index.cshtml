@model IEnumerable<RState.Tb_Properties>

@{
    ViewBag.Title = "Index";
}
<div class="row mb-2">
    <div class="col col-lg-12">
        <h3>Properties Information</h3>
        <hr />
        @using (Html.BeginForm("Index", "Properties", FormMethod.Get, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="input-group">
                <input type="text" class="form-control" name="sTitle" placeholder="Search Properties" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search mr-2"></i>Search
                    </button>
                    <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Properties")">
                        <i class="fas fa-redo mr-2"></i>Reset
                    </a>
                    <a href="@Url.Action("Create", "Properties")" class="btn-data btn btn-outline-success">
                        <i class="fas fa-plus mr-2"></i>Create
                    </a>
                </div>
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col col-lg-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoShare)
                    </th>
                    <th>@Html.DisplayName("Expire Date")</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Criteria)
                    </th>
                    <th>@Html.DisplayName("Start Date")</th>
                    <th>@Html.DisplayName("End Date")</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr style="margin-left:auto;">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoShare)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Criteria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OfferStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OfferEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Pictures", "Index", "Pictures") |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>